<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/contentBg"
    tools:context="com.smart.lock.activity.LoginActivity">

    <include layout="@layout/page_header" />

    <RelativeLayout
        android:id="@+id/layout_mobile"
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:layout_below="@+id/layout_action"
        android:layout_marginTop="20dp"
        android:background="@color/white">

        <TextView
            android:id="@+id/txt_mobile"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:text="手机号码"
            android:textColor="@color/black"
            android:textSize="17sp" />

        <EditText
            android:id="@+id/input_mobile"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="12dp"
            android:layout_toRightOf="@+id/txt_mobile"
            android:paddingLeft="6dp"
            android:background="@color/white"
            android:hint="请输入手机号"
            android:inputType="number"
            android:textColor="@color/contentText"
            android:textSize="17sp"></EditText>

        <ImageButton
            android:id="@+id/btn_rest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="12dp"
            android:background="@color/white"
            android:onClick="resetClick"
            android:src="@drawable/reset_btn" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layout_code"
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:layout_below="@+id/layout_mobile"
        android:layout_marginTop="1dp"
        android:background="@color/white">

        <TextView
            android:id="@+id/txt_code"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:text="验证码"
            android:textColor="@color/black"
            android:textSize="17sp" />

        <Button
            android:id="@+id/btn_code"
            android:layout_width="100dp"
            android:layout_height="35dp"
            android:layout_alignParentRight="true"
            android:layout_alignRight="@+id/input_code"
            android:layout_centerVertical="true"
            android:layout_marginRight="12dp"
            android:background="@color/red"
            android:onClick="codeClick"
            android:text="获取验证码"
            android:textColor="@color/white"
            android:textSize="17sp" />

        <EditText
            android:id="@+id/input_code"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="124dp"
            android:layout_toRightOf="@+id/txt_code"
            android:background="@color/white"
            android:hint="6位数字"
            android:inputType="number"
            android:textColor="@color/contentText"
            android:textSize="17sp"></EditText>
    </RelativeLayout>

    <Button
        android:id="@+id/btn_login"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/layout_code"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/login_btn"
        android:onClick="loginClick"
        android:text="验证手机号"
        android:textColor="@color/white"
        android:textSize="18sp" />

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="使用其他社交账号登陆"
            android:id="@+id/txt_sso_login" android:layout_below="@+id/btn_login" android:layout_centerHorizontal="true"
            android:layout_marginTop="118dp" android:textColor="@color/grey"/>

    <RelativeLayout android:layout_width="188dp" android:layout_height="54dp"
            android:layout_below="@id/txt_sso_login" android:layout_marginTop="30dp" android:layout_centerHorizontal="true">
        <ImageButton android:layout_width="54dp" android:layout_height="54dp" android:layout_marginLeft="20dp"
                     android:background="@drawable/share_qq" android:onClick="qqLogin"/>

        <ImageButton android:layout_width="54dp" android:layout_height="54dp" android:layout_marginRight="20dp"
                     android:background="@drawable/share_weixin" android:onClick="wxLogin"
                     android:layout_alignParentTop="true" android:layout_alignParentRight="true"/>
    </RelativeLayout>

</RelativeLayout>
