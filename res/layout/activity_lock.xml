<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:shimmerframelayout="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_lockActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.smart.lock.activity.LockActivity" >

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

        <android.support.v4.view.ViewPager
            android:id="@+id/viewPager"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" />

        <TextView
            android:id="@+id/text"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="center_vertical"
            android:gravity="center_horizontal"
            android:textColor="@android:color/white"
            android:textSize="48sp"
            android:textStyle="bold"
            android:visibility="invisible" />
    </FrameLayout>

    <RelativeLayout
        android:id="@+id/layout_lockTab"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/bg_gradient"
        android:paddingLeft="20dp"
        android:paddingRight="20dp" >

        <RelativeLayout
            android:id="@+id/layout_touchTab"
            android:layout_width="fill_parent"
            android:layout_height="160dp"
            android:layout_alignParentLeft="true">

            <RelativeLayout
                android:id="@+id/datatime_title"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true" >

                <LinearLayout
                    android:id="@+id/time_date_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txt_time"
                        style="@style/TextShadowStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignLeft="@+id/txt_day"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentTop="true"
                        android:includeFontPadding="false"
                        android:text="10:32"
                        android:textColor="@color/white"
                        android:textSize="55sp"
                        android:typeface="sans" />


                    <ImageView
                        android:id="@+id/img_line"
                        android:layout_width="1px"
                        android:layout_height="fill_parent"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dp"
                        android:layout_marginLeft="7dp"
                        android:layout_marginTop="18dp"
                        android:layout_marginBottom="18dp"
                        android:background="@drawable/line" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:gravity="center_vertical"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/txt_date"
                            style="@style/TextShadowStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:includeFontPadding="false"
                            android:text="3月7号"
                            android:textColor="@color/white"
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/txt_day"
                            style="@style/TextShadowStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:includeFontPadding="false"
                            android:text="星期六"
                            android:textColor="@color/white"
                            android:textSize="18sp" />
                    </LinearLayout>

                </LinearLayout>

                <RelativeLayout
                    android:id="@+id/title_layout"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/time_date_layout"
                    android:layout_centerHorizontal="true">

                    <TextView
                        android:id="@+id/txt_content_Title"
                        style="@style/TextShadowStyle"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_marginRight="50dp"
                        android:gravity="left"
                        android:paddingLeft="5dp"
                        android:text=""
                        android:singleLine="true"
                        android:textColor="@color/white"
                        android:textSize="16sp" />

                    <ImageView
                        android:id="@+id/up_arraw"
                        android:layout_width="19dp"
                        android:layout_height="19dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:background="@drawable/unfold_arrow"
                        android:onClick="showorHideDetail"/>
                </RelativeLayout>
            </RelativeLayout>

            <FrameLayout
                android:id="@+id/layout_buttom"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/datatime_title"
                android:layout_centerHorizontal="true" >

                <LinearLayout
                    android:id="@+id/layout_mainTab"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="30dp"
                    android:layout_marginTop="11dp"
                    android:visibility="gone"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/txt_content"
                        style="@style/TextShadowStyle"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_centerHorizontal="true"
                        android:gravity="left"
                        android:paddingLeft="5dp"
                        android:layout_marginBottom="5dp"
                        android:text="title"
                        android:textColor="@color/white"
                        android:textSize="15sp" />

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content" >

                        <RelativeLayout
                            android:id="@+id/layout_mainTab_wallpaper"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_weight="1"
                            android:onClick="tabWallPaperClick" >


                            <FrameLayout
                                android:id="@+id/mainTab_wallpaper"
                                android:layout_width="45dp"
                                android:layout_height="45dp"
                                android:layout_alignParentTop="true"
                                android:layout_centerHorizontal="true"
                                android:layout_marginTop="5dp" >

	                            <ImageView
	                                android:id="@+id/img_mainTab_wallpaper"
	                                android:layout_width="45dp"
	                                android:layout_height="45dp"
	                                android:src="@drawable/lock_download_selector" />
                            </FrameLayout>
                            <TextView
                                android:id="@+id/txt_mainTab_wallpaper"
                                style="@style/TextShadowStyle"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:layout_alignParentLeft="true"
                                android:layout_below="@id/mainTab_wallpaper"
                                android:gravity="center"
                                android:text="保存壁纸"
                                android:textColor="@color/white"
                                android:textSize="12sp" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/layout_mainTab_share"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_weight="1"
                            android:onClick="shareContent" >

                            <FrameLayout
                                android:id="@+id/mainTab_share"
                                android:layout_width="45dp"
                                android:layout_height="45dp"
                                android:layout_alignParentTop="true"
                                android:layout_centerHorizontal="true"
                                android:layout_marginTop="5dp" >

                                <ImageView
                                    android:id="@+id/img_mainTab_share"
                                    android:layout_width="45dp"
                                    android:layout_height="45dp"
                                    android:src="@drawable/lock_share_selector" />
                            </FrameLayout>

                            <TextView
                                android:id="@+id/txt_mainTab_share"
                                style="@style/TextShadowStyle"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:layout_alignParentLeft="true"
                                android:layout_below="@id/mainTab_share"
                                android:gravity="center"
                                android:text="分享"
                                android:textColor="@color/white"
                                android:textSize="12sp" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/layout_mainTab_like"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_weight="1"
                            android:onClick="favoriteContent" >


                            <FrameLayout
                                android:id="@+id/frame_mainTab_like"
                                android:layout_width="45dp"
                                android:layout_height="45dp"
                                android:layout_alignParentTop="true"
                                android:layout_centerHorizontal="true"
                                android:layout_marginTop="5dp" >

	                            <ImageView
                                	android:id="@+id/img_mainTab_like"
	                                android:layout_width="45dp"
	                                android:layout_height="45dp"
	                                android:src="@drawable/lock_favorite_selector" />
                            </FrameLayout>
                            <TextView
                                android:id="@+id/txt_mainTab_like"
                                style="@style/TextShadowStyle"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/frame_mainTab_like"
                                android:layout_centerHorizontal="true"
                                android:gravity="center"
                                android:text="喜欢"
                                android:textColor="@color/white"
                                android:textSize="12sp" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/layout_mainTab_detail"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_weight="1"
                            android:onClick="tabDetailClick" >


                            <FrameLayout
                                android:id="@+id/frame_mainTab_detail"
                                android:layout_width="45dp"
                                android:layout_height="45dp"
                                android:layout_alignParentTop="true"
                                android:layout_centerHorizontal="true"
                                android:layout_marginTop="5dp" >

	                            <ImageView
	                                android:id="@+id/img_mainTab_detail"
	                                android:layout_width="45dp"
	                                android:layout_height="45dp"
	                                android:src="@drawable/lock_detail_selector" />

                                <ImageView
                                    android:id="@+id/img_share_prize"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="30dp"
                                    android:src="@drawable/lock_prize"
                                    android:visibility="invisible" />
                            </FrameLayout>


                            <TextView
                                android:id="@+id/txt_mainTab_detail"
                                style="@style/TextShadowStyle"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/frame_mainTab_detail"
                                android:layout_centerHorizontal="true"
                                android:gravity="center"
                                android:text="查看详情"
                                android:textColor="@color/white"
                                android:textSize="12sp" />
                        </RelativeLayout>
                    </LinearLayout>
                </LinearLayout>

                <com.smart.lock.view.ShimmerFrameLayout
                    android:id="@+id/shimmer_view_container"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="22dp"
                    android:layout_marginTop="21dp"
                    shimmerframelayout:duration="2500"
                    shimmerframelayout:repeat_delay="1000" >

                    <TextView
                        android:id="@+id/txt_unlock"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:gravity="center_horizontal"
                        android:text="右滑解锁"
                        android:textColor="@color/white"
                        android:textSize="18sp"
                        android:typeface="sans" />
                </com.smart.lock.view.ShimmerFrameLayout>
            </FrameLayout>
        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>