<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_detail"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context="com.smart.lock.activity.DetailActivity">


    <android.support.v4.view.ViewPager
            android:id="@+id/viewPager_detail"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" />

    <RelativeLayout
        android:id="@+id/layout_detail_back"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="12dp"
        android:onClick="detailBack">

        <ImageView
            android:id="@+id/btn_detail_back"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:src="@drawable/selector_icon_detail_back" />

        <TextView
            android:id="@+id/txt_detail_back"
            style="@style/TextShadowStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="6dp"
            android:layout_toRightOf="@+id/btn_detail_back"
            android:text="返回"
            android:textColor="@color/white"
            android:textSize="18sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layout_detail_bg"
        android:layout_width="fill_parent"
        android:layout_height="250dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/bg_gradient_detail">

        <LinearLayout
            android:id="@+id/layout_detail_actionbar"
            android:layout_width="fill_parent"
            android:layout_height="52dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_marginBottom="15dp"
            android:onClick="detailDownload">

            <RelativeLayout
                android:id="@+id/layout_detail_download"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="detailDownload">

                <ImageView
                    android:id="@+id/btn_detail_download"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/selector_icon_detail_download" />

                <TextView
                    android:id="@+id/txt_detail_download"
                    style="@style/TextShadowStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/btn_detail_download"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="6dp"
                    android:text="保存壁纸"
                    android:textColor="@color/white"
                    android:textSize="12sp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/layout_detail_share"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="detailShare">

                <ImageView
                    android:id="@+id/btn_detail_share"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/selector_icon_detail_share" />

                <TextView
                    android:id="@+id/txt_detail_share"
                    style="@style/TextShadowStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/btn_detail_share"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="6dp"
                    android:text="分享"
                    android:textColor="@color/white"
                    android:textSize="12sp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/layout_detail_favorite"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="detailFavorite">

                <ImageView
                    android:id="@+id/btn_detail_favorite"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/selector_icon_detail_favorite" />

                <TextView
                    android:id="@+id/txt_detail_favorite"
                    style="@style/TextShadowStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/btn_detail_favorite"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="6dp"
                    android:text="喜欢"
                    android:textColor="@color/white"
                    android:textSize="12sp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/layout_detail_more"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="detailRead">

                <ImageView
                    android:id="@+id/btn_detail_more"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/selector_icon_detail_more" />

                <ImageView
                        android:id="@+id/img_detail_share_prize"
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:layout_alignLeft="@+id/btn_detail_more"
                        android:layout_marginLeft="20dp"
                        android:src="@drawable/lock_prize"
                        android:visibility="invisible"  />

                <TextView
                    android:id="@+id/txt_detail_more"
                    style="@style/TextShadowStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/btn_detail_more"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="6dp"
                    android:text="查看详情"
                    android:textColor="@color/white"
                    android:textSize="12sp" />
            </RelativeLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/txt_detail_content"
            style="@style/TextShadowStyle"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/layout_detail_actionbar"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="21dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:text="Connie Walker is walking, 小北养猫，健哥开着MPV，john搞装修，我在打牌"
            android:textColor="@color/white"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/txt_detail_title"
            style="@style/TextShadowStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/txt_detail_content"
            android:layout_alignLeft="@+id/txt_detail_content"
            android:layout_marginBottom="15dp"
            android:text="28D核心组"
            android:textColor="@color/white"
            android:textSize="18sp" />
    </RelativeLayout>
</RelativeLayout>