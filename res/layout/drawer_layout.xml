    <TextView
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:background="@color/tablistline" />
<!--
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="10dp"
        android:background="@color/maintabbg" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:background="@color/tablistline" />
