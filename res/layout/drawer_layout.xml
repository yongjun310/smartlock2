    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/maintabbg"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/layout_drawer_exchange"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:background="@color/white"
            android:onClick="clickExchange">

            <ImageView
                android:id="@+id/img_exchange_icon"
                android:layout_width="25dp"
                android:layout_height="fill_parent"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="15dp"
                android:src="@drawable/icon_duihuanshangcheng" />

            <TextView
                android:id="@+id/txt_exchange"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/img_exchange_icon"
                android:text="兑换商城"
                android:textColor="@color/contentText"
                android:textSize="14sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_alignParentRight="true"
                android:layout_centerHorizontal="true"
                android:layout_marginRight="15dp"
                android:src="@drawable/arr_right" />
        </RelativeLayout>


        <TextView
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:background="@color/tablistline" />
<!--
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:layout_marginTop="10dp"
            android:background="@color/tablistline" />
-->
        <RelativeLayout
            android:id="@+id/layout_drawer_setting"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:background="@color/white"
            android:onClick="settingClick">

            <ImageView
                android:id="@+id/img_setting_icon"
                android:layout_width="25dp"
                android:layout_height="fill_parent"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="15dp"
                android:src="@drawable/icon_shezhi" />

            <TextView
                android:id="@+id/txt_drawer_setting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/img_setting_icon"
                android:text="设置"
                android:textColor="@color/contentText"
                android:textSize="14sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_alignParentRight="true"
                android:layout_centerHorizontal="true"
                android:layout_marginRight="15dp"
                android:src="@drawable/arr_right" />
        </RelativeLayout>


        <TextView
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:background="@color/tablistline" />
    </LinearLayout>

    <TextView
            android:layout_width="fill_parent"
            android:layout_height="10dp"
            android:background="@color/maintabbg" />

    <TextView
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:background="@color/tablistline" />

    <WebView android:id="@+id/webView_my"
            android:layout_width="fill_parent" android:layout_height="80dp">
    </WebView>

    <LinearLayout
        android:id="@+id/layout_drawer_version"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentBottom="true"
        android:background="@color/maintabbg"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:paddingTop="2dp">

        <TextView
            android:id="@+id/txt_drawer_version"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:gravity="bottom"
            android:paddingBottom="25dp"
            android:text="当前版本：1.0.0("
            android:textColor="@color/tabright"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/txt_drawer_version_code"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_marginBottom="25dp"
            android:gravity="bottom"
            android:text="点击更新"
            android:onClick="checkVersion"
            android:textColor="@color/update_blue"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/txt_drawer_version_end"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_marginBottom="25dp"
            android:gravity="bottom"
            android:text="至最新版1.0.9)"
            android:textColor="@color/tabright"
            android:textSize="12sp" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/layout_drawer_blank"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/layout_drawer_myfoot"
        android:layout_marginTop="1dp"
        android:background="@color/white"></RelativeLayout>
</LinearLayout>