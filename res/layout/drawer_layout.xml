<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_drawer_content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="51dp"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/layout_drawer_menu"
        android:layout_width="fill_parent"
        android:layout_height="215dp"
        android:background="@drawable/beijing"
        android:orientation="vertical">

        <!--
        <ImageView
            android:id="@+id/img_drawer_my"
            android:layout_width="74dp"
            android:layout_height="74dp"
            android:layout_gravity="center"
            android:layout_marginTop="25dp"
            android:background="@drawable/yuan"
            android:src="@drawable/user_img" />
        -->

        <com.smart.lock.view.RoundImageView android:id="@+id/img_drawer_my"
                                            android:layout_width="74dp" android:layout_height="74dp"
                                            android:layout_gravity="center"
                                            android:layout_marginTop="23dp"
                                            android:background="@drawable/yuan"
                                            android:src="@drawable/user_img"
                />

        <ImageButton android:id="@+id/btn_drawer_login" android:layout_width="90dp" android:layout_height="25dp"
                     android:src="@drawable/selector_login_btn" android:visibility="gone"
                     android:layout_marginTop="21dp" android:onClick="bindMobile"
                     android:layout_gravity="center_horizontal"/>

        <TextView
            android:id="@+id/txt_drawer_account"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="21dp"
            android:gravity="center_horizontal"
            android:text="Sam"
            android:textColor="@color/white"
            android:textSize="18sp" />
        <RelativeLayout
            android:id="@+id/layout_bind_mobile"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="9dp"
            android:gravity="center_horizontal"
            android:onClick="bindMobile">

            <TextView
                android:id="@+id/txt_drawer_mobile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="17091955217"
                android:textColor="@color/white"
                android:textSize="15sp" />

            <ImageView
                android:id="@+id/img_drawer_mobile_edit"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@id/txt_drawer_mobile"
                android:src="@drawable/icon_fill_in" />
        </RelativeLayout>

        <RelativeLayout android:id="@+id/layout_drawer_mobile"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:gravity="left">

            <ImageView
                android:id="@+id/img_exchange"
                android:layout_width="33dp"
                android:layout_height="fill_parent"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="10dp"
                android:layout_centerInParent="true"
                android:src="@drawable/icon_zhanghuyue" />

            <TextView
                android:id="@+id/txt_exchange_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/img_exchange"
                android:text="账户余额"
                android:textColor="@color/white"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/overage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="15dp"
                android:text="--元"
                android:textColor="@color/white"
                android:textSize="14sp" />
        </RelativeLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/img_tablist_line"
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:background="@color/tablistline" />

    <TextView
            android:layout_width="fill_parent"
            android:layout_height="10dp"
            android:background="@color/maintabbg" />

    <TextView
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:background="@color/tablistline" />

    <RelativeLayout
        android:id="@+id/layout_drawer_message"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_marginTop="1px"
        android:background="@color/white"
        android:onClick="clickMessage">

        <ImageView
            android:id="@+id/img_message_icon"
            android:layout_width="25dp"
            android:layout_height="fill_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="15dp"
            android:src="@drawable/icon_news" />

        <TextView
            android:id="@+id/txt_drawer_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/img_message_icon"
            android:text="消息中心"
            android:textColor="@color/contentText"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/img_my_red_spot"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="7dp"
            android:layout_toRightOf="@id/txt_drawer_message"
            android:src="@drawable/icon_new" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_alignParentRight="true"
            android:layout_centerHorizontal="true"
            android:layout_marginRight="15dp"
            android:src="@drawable/arr_right" />
    </RelativeLayout>
