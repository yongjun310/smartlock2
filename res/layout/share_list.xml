<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="220dp"
    android:layout_gravity="bottom"
    android:background="@color/sharebg"
    android:orientation="vertical">

    <TextView
        android:id="@+id/shareto_text"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:paddingBottom="18dp"
        android:paddingTop="16dp"
        android:text="分享到"
        android:textColor="@color/sixtyBlack"
        android:textSize="17sp" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:onClick="onItemClick"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/layout_0"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:onClick="onItemClick"
            android:orientation="vertical">

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:paddingLeft="9dp"
                android:paddingRight="9dp"
                android:src="@drawable/wxshareappmessage" />

            <TextView
                android:id="@+id/weixin"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingTop="6dp"
                android:text="微信好友"
                android:textColor="@color/black"
                android:textSize="13sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:onClick="onItemClick"
            android:orientation="vertical">

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:paddingLeft="9dp"
                android:paddingRight="9dp"
                android:src="@drawable/wxsharetimeline" />

            <TextView
                android:id="@+id/weixin_cicle"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingTop="6dp"
                android:text="朋友圈"
                android:textColor="@color/black"
                android:textSize="13sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:onClick="onItemClick"
            android:orientation="vertical">

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:paddingLeft="9dp"
                android:paddingRight="9dp"
                android:src="@drawable/qqshareweibo" />

            <TextView
                android:id="@+id/qqzone"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingTop="6dp"
                android:text="QQ空间"
                android:textColor="@color/black"
                android:textSize="13sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_3"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:onClick="onItemClick"
            android:orientation="vertical">

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:paddingLeft="9dp"
                android:paddingRight="9dp"
                android:src="@drawable/qqshare" />

            <TextView
                android:id="@+id/qq"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingTop="6dp"
                android:text="QQ"
                android:textColor="@color/black"
                android:textSize="13sp" />
        </LinearLayout>

        <!-- <LinearLayout
            android:id="@+id/layout_4"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:onClick="onItemClick"
            android:orientation="vertical">

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:paddingLeft="9dp"
                android:paddingRight="9dp"
                android:src="@drawable/sina_weibo" />

            <TextView
                android:id="@+id/weibo"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingTop="6dp"
	            android:text="新浪微博"
                android:textColor="@color/black"
                android:textSize="13sp" />
        </LinearLayout> -->
    </LinearLayout>

    <Button
        android:id="@+id/cancel_btn"
        android:layout_width="338dp"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="12dp"
        android:layout_marginTop="18dp"
        android:background="@drawable/popup_bg"
        android:text="取  消"
        android:textColor="@color/tabright"
        android:textSize="17sp" />
    
</LinearLayout>